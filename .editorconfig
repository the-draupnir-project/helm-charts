root = true

[*.{ts, tsx, js, jsx}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*{.md}]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

[{LICENSE,NOTICE,*.{yml,yaml,json}}]
trim_trailing_whitespace = false
indent_style = space
indent_size = unset
